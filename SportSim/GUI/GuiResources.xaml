<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Simocracy.SportSim">
	
	<!-- General -->
	
	<Style x:Key="IntPercentSlider" TargetType="Slider">
		<Setter Property="Maximum" Value="100" />
		<Setter Property="IsSnapToTickEnabled" Value="True" />
		<Setter Property="SmallChange" Value="1" />
		<Setter Property="LargeChange" Value="10" />
	</Style>
	<Style x:Key="Title" TargetType="Label">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin" Value="5,0" />
	</Style>


	<!-- Manager Pages -->
	
	<BooleanToVisibilityConverter x:Key="CapacityNatOptionalConverter" />
	<local:TextInputToVisibilityConverter x:Key="TextInputToVisibilityConverter" />
	
	<Style x:Key="ManageTitle" TargetType="Label">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin" Value="5,0" />
	</Style>
	<Style x:Key="ManageDebug" TargetType="Label">
		<Setter Property="ContentStringFormat" Value="ID: {0}" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Margin" Value="5,0" />
	</Style>
	<Style x:Key="MangeList" TargetType="ListBox">
		<Setter Property="Margin" Value="5,0" />
	</Style>
	<Style x:Key="ManageContentGrid" TargetType="Grid">
		<Setter Property="Margin" Value="5,0" />
	</Style>
	<Style x:Key="ManageScroller" TargetType="ScrollViewer">
		<Setter Property="VerticalScrollBarVisibility" Value="Auto" />
		<Style.Resources>
			<Style TargetType="Grid" BasedOn="{StaticResource ManageContentGrid}" />
		</Style.Resources>
	</Style>
	<Style x:Key="ManageCheckBox" TargetType="CheckBox">
		<Setter Property="Margin" Value="0, 2.5" />
	</Style>
	<Style x:Key="ManageMultiline" TargetType="TextBox">
		<Setter Property="AcceptsReturn" Value="True" />
		<Setter Property="AcceptsTab" Value="True" />
		<Setter Property="TextWrapping" Value="Wrap" />
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
	</Style>
	<Style x:Key="ManageButtons" TargetType="StackPanel">
		<Setter Property="Orientation" Value="Horizontal" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Margin" Value="2.5, 5" />
		<Style.Resources>
			<Style TargetType="Button">
				<Setter Property="Width" Value="70" />
				<Setter Property="Margin" Value="2.5, 0" />
			</Style>
		</Style.Resources>
	</Style>

	<ControlTemplate x:Key="OptionalInput" TargetType="TextBox">
		<Grid>
			<TextBlock Text="Optional" Foreground="LightGray" Visibility="{Binding ElementName=InputBox, Path=Text.IsEmpty, Converter={StaticResource CapacityNatOptionalConverter}}" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Height="{Binding ElementName=InputBox, Path=Height}" />
			<TextBox Name="InputBox" Text="{TemplateBinding Text}" Background="Transparent"/>
		</Grid>
	</ControlTemplate>
	<ControlTemplate x:Key="ManageSlider" TargetType="Slider">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="30" />
			</Grid.ColumnDefinitions>
			<Slider x:Name="Slider" Grid.Column="0" Style="{DynamicResource IntPercentSlider}" Value="{TemplateBinding Value}" />
			<TextBox x:Name="Box" Grid.Column="1" Margin="5,0,0,0" Text="{Binding ElementName=Slider, Path=Value, Mode=TwoWay}" VerticalAlignment="Center" />
		</Grid>
	</ControlTemplate>


	<!-- Invalid Inputs -->

	<Style x:Key="InvalidInput" TargetType="Control">
		<Setter Property="BorderBrush" Value="Red" />
		<Setter Property="BorderThickness" Value="2" />
	</Style>
	<Style x:Key="InvalidInputMultiline" TargetType="TextBox" BasedOn="{StaticResource ManageMultiline}">
		<Setter Property="BorderBrush" Value="Red" />
		<Setter Property="BorderThickness" Value="2" />
	</Style>


	<!-- Football Simulation Pages -->

	<local:ExpanderToBooleanConverter x:Key="ExpanderToBooleanConverter" />

</ResourceDictionary>